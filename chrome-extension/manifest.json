{
    "manifest_version": 3,
    "name": "X-Unfollowers",
    "version": "1.0",
    "description": "Bust down my Twitter unfollowers",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x-unfollowers.gamhcrew.repl.co/*"
    ],
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}